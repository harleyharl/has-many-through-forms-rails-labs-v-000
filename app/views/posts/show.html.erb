
<h1> <%= @post.title %></h1>

<h1> <%= @post.content %></h1>

Categories: <br />
<ul>
  <% @post.categories.each do |c| %>
  <li>
    <%= c.name %>
  </li>
  <%end%>
</ul>

<!-- <input type="text" name="post[comments][][content]" id="comment_content" /> -->

<%= form_for :comments do |f| %>

  <%= f.label :comment %>
  <%= f.text_area :comment_content %>
  <%= f.fields_for :comments do |comment_builder| %>
    <%= comment_builder.text_field :content %>
    <%= comment_builder.text_field :user_id %>
  <%= f.submit %>

<% end %>
