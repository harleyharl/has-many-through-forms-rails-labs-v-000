
<h1> <%= @post.title %></h1>

<h1> <%= @post.content %></h1>

Categories: <br />
<ul>
  <% @post.categories.each do |c| %>
  <li>
    <%= c.name %>
  </li>
  <%end%>
</ul>

Comments: <br />
<ul>
  <% @post.comments.each do |c| %>
  <li>
    <%= c.content %>
  </li>
  <%end%>
</ul>

<%= form_for @comment do |f| %>
  <%= f.label :comment %>
  <%= f.text_area :content %>
  <%= f.hidden_field :post_id, value: "#{params[:id]}" %>

  <%= f.fields_for :user_attributes, @post.users.build do |user| %>
    <%= user.text_field :username %>
  <% end %>

  <%= f.submit %>
<% end %>
